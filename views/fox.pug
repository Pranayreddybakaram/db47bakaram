extends layout

block content
  h1= title
  p Search results fox  
  p 
  - let items = results
   div(class="container-fluid") 
    div(class="row m-1") 
      each item in items  
        - let destination = `dispatch(\"/fox/update?id=${item._id}\")` 
         - let details = `dispatch(\"/fox/detail?id=${item._id}\")` 
         
        div(class="row-sm-2", class="m-1") Item #{item.name}(#{item.color}) is #{item.weight} 
        <br>

        span(class="btn btn-info", onclick= details) Details
          <br>
          a(class="btn btn-danger", href="/fox/delete/?id="+item._id) Delete
          <br>

          button.btn( class="btn-primary ml-1", onclick= destination) Update 
   
  script. 
    function dispatch(path){ 
      window.location.href=path 
    } 
 

  script.                
        function buy(intemNo)
        {
              alert(`you purchased Item ${intemNo+1}`)
        }